---
import { Icon } from "astro-icon/components";
import Button from "./ui/Button.astro";
---

<div class="hidden md:flex gap-2 items-center">
  <div
    class="bg-white shadow rounded-full py-2 px-4 focus-within:ring-4 ring-accent2 transition-shadow flex gap-4"
  >
    <Icon name="search" size={24} />
    <input
      type="text"
      name="search"
      id="search-input"
      class="focus:outline-none"
      placeholder="Coffee serach"
    />
  </div>
  <Button
    aria-label="view cart"
    id="view-cart"
    intent={"icon"}
    size={"xsmall"}
    title="View cart"
  >
    <Icon name="cart" size={24} />
  </Button>
</div>

<script>
  const cartButton = document.querySelector("#view-cart") as HTMLButtonElement;

  cartButton.addEventListener("click", () => {
    alert("This is a cart");
  });
</script>
